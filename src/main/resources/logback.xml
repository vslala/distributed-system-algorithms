<!-- logback.xml -->
<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d [%t] %-5p %c{1} - %m%n</pattern>
        </encoder>
    </appender>

    <root level="ERROR">
        <appender-ref ref="console" />
    </root>

    <logger name="org.apache.zookeeper.ClientCnxn" level="ERROR" />
</configuration>
